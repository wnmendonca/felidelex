@model ProjetoFidelidade.Web.Models.LoginModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
        <div>
            <img src="@Url.Content("~/Images/logo.png")" class="img-responsive" />
        </div>
        <hr />
        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @id = "loginForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.TextBoxFor(m => m.CPF, new { @class = "form-control text-center", @placeholder = "Digite aqui seu CPF" })
            </div>

            <button type="submit" class="btn btn-default btn-block">Entrar</button>

            <div class="form-group">
                Não possui cadastro? <a href="@Url.Action("Index", "Cadastro")">Clique aqui</a>
            </div>

            <div class="has-error">
                @Html.ValidationMessage("Login", new { @class = "control-label"})
            </div>
        }
    </div>
</div>

@section scripts{ }